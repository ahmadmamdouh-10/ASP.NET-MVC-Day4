@using Lab.Models
@model User


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        #container {
            width: 60%;
            margin: 20% 40%;
            font-size: large;
            color: blueviolet;
        }

        label {
            margin: 10px;
        }

        .btn{
            padding: 10px;
            margin: 0 0 0 170px
        }
    </style>
</head>
<body>
    <div id="container">
        <h1> Login Page</h1>

        @using (Html.BeginForm())
        {
            @Html.LabelFor(i => i.UserName)
            @Html.TextBoxFor(i => i.UserName)
            <br />
            <br />
            @Html.LabelFor(i => i.Password)
            @Html.PasswordFor(i => i.Password)
            <br />
            <br />
            <input type="submit" value="Login" class="btn btn-danger" />
        }
    </div>
</body>
</html>
